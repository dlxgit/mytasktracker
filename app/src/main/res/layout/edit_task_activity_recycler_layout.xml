<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_task_activity_recycler_item_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/edit_task_activity_recycler_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vec_date_range_black_24dp"/>
    <LinearLayout
        android:id="@+id/edit_task_activity_recycler_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/edit_task_activity_recycler_item_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due date"/>
        <TextView
            android:id="@+id/edit_task_activity_recycler_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>