<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/priority_fragment_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_gravity="center"
    android:gravity="center"
    android:background="#A3A3">

    <!--tools:context="com.project.mytasktracker.Fragments.Priority.PriorityFragment"-->
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/priority_fragment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:layout_gravity="center_horizontal"/>

    <ListView
        android:id="@+id/priority_fragment_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/priority_fragment_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="CANCEL"/>

</LinearLayout>
